@using ViewExtensions
@using WebSite.App_Code

@{
    string currentVersion = PageVersions.CurrentVersion();
    bool showSocialMedia = true;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    @Styles.Render("~/Content/css")

@*    <link rel="shortcut icon" href="/favicon.ico">*@
</head>

<body>
    @*Required by Facebook. Loads their SDK. https://developers.facebook.com/docs/javascript/quickstart*@

    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>


    <header>
        <nav class="navbar navbar-default navbar-static-top" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mainmenu">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.Partial("Partials/_Logo")
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="mainmenu">
                    @Html.Partial("Partials/_MainMenu")
                </div> @*.navbar-collapse*@
            </div> @*.container*@

            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        @if (showSocialMedia)
                        {
                            <div class="social-media">
                                @*
                                    Twitter button. Generated at https://about.twitter.com/resources/buttons#tweet
                                    Evaluating #JSNLog. Integrates JavaScript logging with .Net server side logging. Thoughts?
                                *@

                                <div class="twitter">
                                    @{
                                        string twitterText = "#DynamicBundles  #JavaScript #logging package. Stores client side events in " +
                                            "server logs.";
                                    }

                                    <a href="https://twitter.com/share" class="twitter-share-button" data-text="@twitterText" data-count="none">Tweet</a>
                                    <script>!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = p + '://platform.twitter.com/widgets.js'; fjs.parentNode.insertBefore(js, fjs); } }(document, 'script', 'twitter-wjs');</script>
                                </div>

                                @*Reddit share button. Generated at http://www.reddit.com/buttons/*@

                                <div class="reddit">
                                    <a href="//www.reddit.com/submit" onclick="window.location = '//www.reddit.com/submit?url=' + encodeURIComponent(window.location); return false"> <img src="//www.reddit.com/static/spreddit7.gif" alt="submit to reddit" border="0" /> </a>
                                </div>

                                @*Facebook share button. Generated at https://developers.facebook.com/docs/plugins/share-button/*@

                                <div class="facebook">
                                    <div class="fb-share-button" data-href="http://getdynamicbundles.com" data-type="button"></div>
                                </div>
                            </div>
                        }
                    </div>
                </div> @*row*@




            </div> @*.container*@



        </nav>
    </header>



     @RenderSection("Hero", false)

    <section class="main">
                @RenderBody()
    </section>

    <footer>
        <nav class="navbar navbar-default" role="navigation">
            <div class="container">
                &copy; 2014 <a href="http://mattperdeck.com/page/About-Matt-Perdeck.aspx" target="_blank">Mattijs Perdeck</a> |
                License: <a href="@SiteConstants.LicenceUrl" target="_blank">@SiteConstants.LicenceName</a> |
            </div>
        </nav>
    </footer>

    @*Must load jQuery before bootstrap*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>
